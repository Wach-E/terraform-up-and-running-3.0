terraform {
  required_version = ">= 1.0.0, < 2.0.0"

  required_providers {
    aws = {
      source  = "hashicorp/aws"
      version = "~> 4.0"
    }
  }
  backend "s3" {
    # The comments in this backend is configured through backend.hcl!
    # bucket 
    # key
    # region
    # dynamodb_table
    # encrypt
  }
}

provider "aws" {
  region = "us-west-2"
}

module "mysql" {
  source = "../../../../modules/data-stores/mysql"

  db_name     = var.db_name
  db_username = var.db_username
  db_password = var.db_password
}
